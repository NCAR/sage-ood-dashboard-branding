<%- 
  aria  = current_page?(root_path) ? "aria-current=page" : ''
  title = ENV["OOD_DEV_DASHBOARD_TITLE"].presence || @user_configuration.dashboard_title
-%>

<li role="none">
  <% if @user_configuration.dashboard_header_img_logo %>
    <a class="navbar-brand navbar-brand-logo" href="<%= root_path %>" <%= aria %> role="menuitem">
      <img class="img-fluid"
           src="<%= @user_configuration.dashboard_header_img_logo %>"
           alt="<%= title %>">
    </a>
  <% else %>
    <a class="navbar-brand navbar-brand-logo"
       <%= aria %>
       role="menuitem"
       href="<%= root_path %>">
      <%= title %>
    </a>
  <% end %>
</li>

